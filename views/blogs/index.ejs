<!DOCTYPE html>
<html>
  <head>
    <title>Log In</title>
    <link rel='stylesheet' href='stylesheets/style.css' />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="/javascripts/comments.js"></script>
  </head>
  <body>

    <nav class="grey light-1">
      <div>
        <a href="#!" class="brand-logo center">Blogger</a>
      </div>
    </nav>

    <a class="waves-effect waves-light btn" id="newBlog">Create New Blog</a>
    <div class="container">
      <div class="row" id="blogCreationForm">
        <form class="col s12" action="/blog" method="post">
          <div class="row">
            <div class="input-field col s12">
              <input type="text" name="title" id="blogTitle">
              <label for="blogTitle">Title</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input type="text" name="body" id="blogBody">
              <label for="blogBody">Body</label>
            </div>
          </div>
          <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
        </form>
      </div>
    </div>
    <div class="container col s12">
    </div>>
      <h1>Blogs</h1>
      <% blogs.forEach((blog) => { %>
        <h5> <%= blog.title %> </h5>
        <div class="container col s12">
          <p> <%= blog.body %> </p>
        </div>
      <% }) %>
    </div>

    <div class="container">
      <div class="row" id="newComment">
        <h2>New Comment</h2>
        <form class="col s12">
          <div class="row">
            <div class="input-field col s12">
              <input type="text" name="title" id="commentTitle">
              <label for="commentTitle">Title</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input type="text" name="comment" id="commentBody">
              <label for="commentBody">Body</label>
            </div>
          </div>
          <button class="btn waves-effect waves-light" type="submit" name="action" id="createComment">Submit</button>
        </form>
      </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
  </body>
</html>
